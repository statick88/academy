---
// src/layouts/Layout.astro
import '../styles/global.css';
import Navigation from '../components/Navigation.tsx';

export interface Props {
	title: string;
	description?: string;
}

const { title, description = "Statick Academy - Plataforma de Educación Tecnológica Premium" } = Astro.props;

const navItems = [
	{ label: 'Inicio', href: '/', active: Astro.url.pathname === '/' },
	{ label: 'Cursos', href: '/courses', active: Astro.url.pathname.startsWith('/courses') },
	{ label: 'Comunidad', href: '/community', active: Astro.url.pathname === '/community' },
	{ label: 'Dashboard', href: '/dashboard', active: Astro.url.pathname.startsWith('/dashboard') },
];
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-academy-bg-secondary text-academy-text-primary min-h-screen font-body">
		<header class="bg-academy-bg-primary shadow-sm border-b border-academy-border-light sticky top-0 z-50">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex justify-between items-center h-16">
					<div class="flex items-center">
						<a href="/" class="flex items-center space-x-2">
							<div class="w-8 h-8 bg-gradient-to-br from-primary-600 to-secondary-600 rounded-lg flex items-center justify-center">
								<span class="text-white font-bold text-sm">SA</span>
							</div>
							<h1 class="text-xl font-bold text-academy-text-primary">Statick Academy</h1>
						</a>
					</div>

					<!-- Desktop Navigation -->
					<Navigation items={navItems} className="hidden md:block" client:load />

					<!-- Mobile Navigation -->
					<div class="md:hidden">
						<Navigation items={navItems} className="md:hidden" client:load />
					</div>
				</div>
			</div>
		</header>

		<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
			<slot />
		</main>

		<footer class="bg-academy-bg-tertiary border-t border-academy-border-light mt-16">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
				<div class="grid md:grid-cols-4 gap-8">
					<div class="md:col-span-2">
						<div class="flex items-center space-x-2 mb-4">
							<div class="w-8 h-8 bg-gradient-to-br from-primary-600 to-secondary-600 rounded-lg flex items-center justify-center">
								<span class="text-white font-bold text-sm">SA</span>
							</div>
							<h3 class="text-lg font-bold text-academy-text-primary">Statick Academy</h3>
						</div>
						<p class="text-academy-text-secondary mb-4 max-w-md">
							Plataforma de educación tecnológica premium. Contenido gratuito y de alta calidad
							para la comunidad hispanohablante.
						</p>
					</div>

					<div>
						<h4 class="font-semibold text-academy-text-primary mb-4">Plataforma</h4>
						<ul class="space-y-2">
							<li><a href="/courses" class="text-academy-text-secondary hover:text-primary-600 transition-colors">Cursos</a></li>
							<li><a href="/community" class="text-academy-text-secondary hover:text-primary-600 transition-colors">Comunidad</a></li>
							<li><a href="/about" class="text-academy-text-secondary hover:text-primary-600 transition-colors">Sobre nosotros</a></li>
						</ul>
					</div>

					<div>
						<h4 class="font-semibold text-academy-text-primary mb-4">Soporte</h4>
						<ul class="space-y-2">
							<li><a href="/help" class="text-academy-text-secondary hover:text-primary-600 transition-colors">Centro de ayuda</a></li>
							<li><a href="/contact" class="text-academy-text-secondary hover:text-primary-600 transition-colors">Contacto</a></li>
							<li><a href="https://github.com/statick88/academy" class="text-academy-text-secondary hover:text-primary-600 transition-colors" target="_blank" rel="noopener">GitHub</a></li>
						</ul>
					</div>
				</div>

				<div class="border-t border-academy-border-light mt-8 pt-8 flex flex-col md:flex-row justify-between items-center">
					<p class="text-academy-text-secondary text-sm">
						&copy; 2026 Statick Academy. Todos los derechos reservados.
					</p>
					<p class="text-academy-text-secondary text-sm mt-2 md:mt-0">
						Hecho con ❤️ para la comunidad tecnológica
					</p>
				</div>
			</div>
		</footer>
	</body>
</html>