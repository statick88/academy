---
// src/layouts/Layout.astro
import '../styles/global.css';

export interface Props {
	title: string;
	description?: string;
}

const { title, description = "Statick Academy - Plataforma de Educación Tecnológica" } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-slate-50 text-slate-900 min-h-screen">
		<header class="bg-white shadow-sm border-b border-slate-200">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex justify-between items-center h-16">
					<div class="flex items-center">
						<h1 class="text-xl font-bold text-slate-900">Statick Academy</h1>
					</div>
					<nav class="flex space-x-4">
						<a href="/" class="text-slate-600 hover:text-slate-900">Inicio</a>
						<a href="/courses" class="text-slate-600 hover:text-slate-900">Cursos</a>
						<a href="/dashboard" class="text-slate-600 hover:text-slate-900">Dashboard</a>
					</nav>
				</div>
			</div>
		</header>

		<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
			<slot />
		</main>

		<footer class="bg-slate-100 border-t border-slate-200 mt-16">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
				<div class="text-center text-slate-600">
					<p>&copy; 2026 Statick Academy. Todos los derechos reservados.</p>
					<p class="mt-2 text-sm">Aprende tecnología con contenido premium gratuito</p>
				</div>
			</div>
		</footer>
	</body>
</html>